FROM node:20-bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
  libreoffice \
  libreoffice-common \
  fontconfig \
  fonts-dejavu-core \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./
RUN npm ci --omit=dev

COPY . .

ENV PORT=3000
EXPOSE 3000

CMD ["node", "server.js"]
